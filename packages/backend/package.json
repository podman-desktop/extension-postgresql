{
  "name": "postgresql",
  "displayName": "PostgreSQL",
  "description": "Manage local PostgreSQL services for development",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "Philippe Martin",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": ">=1.14.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "icons": {
      "pg-icon": {
        "description": "PostgreSQL icon",
        "default": {
          "fontPath": "pg-icon.woff2",
          "fontCharacter": "\\E001"
        }
      }
    },
    "menus": {
      "dashboard/container": [
        {
          "command": "postgresql.pgadmin.start",
          "title": "Start PgAdmin",
          "when": "containerImageName =~ /docker\\.io\\/library\\/postgres/ || containerImageName =~ /docker\\.io\\/pgvector\\/pgvector/"
        }
      ]
    },
    "views": {
      "icons/containersList": [
        {
          "when": "containerImageName =~ /docker\\.io\\/library\\/postgres/ || containerImageName =~ /docker\\.io\\/pgvector\\/pgvector/",
          "icon": "${pg-icon}"
        }
      ]
    },
    "commands": [
      {
        "command": "postgresql.pgadmin.start",
        "title": "PgAdmin: start..."
      }
    ]
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint:check": "eslint . --ext js,ts,tsx",
    "lint:fix": "eslint . --fix --ext js,ts,tsx",
    "watch": "vite --mode development build -w"
  },
  "devDependencies": {
    "@podman-desktop/api": "1.18.0",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitest/coverage-v8": "^2.0.2",
    "eslint": "^8.56.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^4.3.2",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-sonarjs": "^1.0.4",
    "prettier": "^3.3.3",
    "typescript": "5.8.3",
    "vite": "^6.3.0",
    "vitest": "^2.0.2"
  },
  "dependencies": {
    "semver": "^7.6.3"
  }
}
